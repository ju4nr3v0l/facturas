{% extends 'base.html.twig' %}
{% block content %}
  <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header">Facturas</h1>
    <h2 class="sub-header">Listado Facturas</h2>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>Cliente</th>
            <th>Valor</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
        {% for factura in facturas%}
          <tr>
            <td>{{factura.numeroFactura}}</td>
            <td>{{factura.idCliente}}</td>
            <td></td>
            <td><span><a href="/facturas/{{factura.id}}/edit" alt="Editar"><i class="fa fa-pencil-square" aria-hidden="true"></i></a><a href="/facturas/{{factura.id}}/delete" alt="Borrar"><i class="fa fa-trash-o" aria-hidden="true"></i></a></td>
          </tr>
        {%endfor%}  
        </tbody>
      </table>
    </div>
  </div>
{% endblock %}        